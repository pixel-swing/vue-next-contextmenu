@import "./reset.styl"

.next-context-menu
  position: absolute
  min-width: 240px
  // max-height: 270px
  margin: 0
  background-color: #fff
  border: 1px solid #e8e8e8
  border-radius: 5px
  box-shadow: 0 15px 15px rgba(50,50,90,0.1), 0 5px 15px rgba(0,0,0,0.07)
  list-style: none
  font-size: 14px
  white-space: nowrap
  cursor: pointer
  z-index: 2800
  -webkit-tap-highlight-color: transparent
  // overflow: scroll

.context-menu-group-name 
  display inline-block
  width: 100%
  padding-left: 20px
  padding-top: 10px
  font-size: 12px
  color: #909399
  line-height: 30px
  cursor: text


.context-menu-item
  position: relative
  font-size: 14px
  padding: 0 20px
  position: relative
  color: #606266
  height: 50px;
  line-height: 50px;
  box-sizing: border-box
  cursor: pointer
  transition: all 500ms ease
  &:hover:not(.context-menu-item-disabled )
    background: #f5f7fa
.context-menu-item-disabled 
  color: #ccc
  cursor: not-allowed;

.context-menu-sub
  position relative
  .menu-sub-label 
    span 
      display: inline-block
      width: 100%
  .top
    top: 0
  .left
    left: 0
    transform: translateX(-100%)
  .bottom
    bottom: 0
  .right
    right: 0
    transform: translateX(100%)

